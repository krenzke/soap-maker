<div class="flex items-center justify-between mb-6">
  <h1 class="text-2xl font-semibold">Ingredients</h1>
  <div>
    <%= link_to "Add Ingredient", new_ingredient_path, class: 'btn-primary' %>
  </div>
</div>

<table class="w-full text-sm text-left text-gray-500 rtl:text-right">
  <thead class="text-xs text-gray-700 uppercase bg-gray-50">
    <tr>
      <th scope="col" class="px-6 py-3">Name</th>
      <th scope="col" class="px-6 py-3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ingredients.each do |ingredient| %>
      <tr class="bg-white border-b">
        <td class="px-6 py-4"><%= ingredient.name %></td>
        <td class="flex gap-2 px-6 py-4">
          <%= link_to 'Edit', edit_ingredient_path(ingredient), class: 'link' %>
          <%= button_to 'Delete', ingredient, method: :delete, form: { data: { confirm: 'Are you sure you want to delete this ingredient?' } } %>
        </td>
      </tr>
    <% end %>
  </tbody>

</table>
